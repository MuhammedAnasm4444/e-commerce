<div class="main-content">

    <!-- content -->
    <div class="container-fluid content-top-gap">


        <!-- breadcrumbs -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb my-breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Edit Product</li>
            </ol>
        </nav>
        <!-- //breadcrumbs -->
        <!-- forms -->
        <section class="forms">
            <!-- forms 3 -->
            <div class="card card_border py-2 mb-4">
                <div class="cards__heading">
                    <h3>Edit Product<span></span></h3>
                </div>
                <div class="card-body">
                    <form action="/vendor/edit-product/{{product._id}}" id="edit-product"method="post" >
                        <div class="form-group row">
                            <label for="inputEmail3" class="col-sm-2 col-form-label input__label">Product Name</label>
                            <div class="col-sm-10">
                                <input type="text" name="product" class="form-control input-style" id="inputEmail3"
                                    placeholder="product name" value="{{product.product}}">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputPassword3" class="col-sm-2 col-form-label input__label">Product
                                Price</label>
                            <div class="col-sm-10">
                                <input type="text" name="price" class="form-control input-style" id="inputPassword3"
                                    placeholder="price"value="{{product.price}}">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputPassword3" class="col-sm-2 col-form-label input__label">Main Description</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" name="description"style="height: 100px;"
                                    aria-label="With textarea">{{product.description}}</textarea>

                            </div>
                        </div>
                         <div class="form-group row">
                            <label for="inputPassword3" class="col-sm-2 col-form-label input__label">Sub Description</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" name="description1" style="height: 100px;"
                                    aria-label="With textarea" >{{product.description1}}</textarea>

                            </div>
                        </div>

                      
                        <fieldset class="form-group">
                            <div class="row">
                                <legend class="col-form-label col-sm-2 pt-0 input__label">Images</legend>
                                <div class="">
                                    <div class="" style="height: 100px;  width: 100px;border-style: groove;border-color: azure;">
                                        <img id="thumbnail" height="100" width="100" alt="Thumbnail" src="/images/product-images/{{product._id}}__thumbnail.png">
                                    </div>
                                    <input type="file" name="thumbnail"alt=""  value="/images/product-images/{{product._id}}__thumbnail.png" id="inputTb" accept="image/*">
                                    <input type="text" name="base64" id="base64Image" hidden>
                                    <input type="button" id="btnCrop" value="Crop" />
		                         	<input type="button" id="btnRestore" value="Restore" />
		                        <div>
			<canvas id="canvas" style="width:10px;height:200px;">
			  Your browser does not support the HTML5 canvas element.
			</canvas>
		  </div>           
		   
		  <div id="result"></div>
                                </div>
                                <div class=""style="margin-left:11em;">
                                    
                                     <div class="" style="height: 150px;  width: 150px;border-style: groove;border-color: azure;">
                                        <img id="side" height="150" width="150" alt="side View"src="/images/product-images/{{product._id}}__side.png">
                                    </div>
                                    <input type="file" name="side"alt=""  id="inputSide">
                                     
                                    <input type="text" name="base64side" id="base64ImageSide" hidden>
                                    <input type="button" id="btnCropSide" value="Crop" />
		                         	<input type="button" id="btnRestoreSide" value="Restore" />
		                        <div>
			<canvas id="canvasSide" style="width:100px;height:200px;">
			  Your browser does not support the HTML5 canvas element.
			</canvas>
		  </div>         
                                </div>
                                <div class="" style="margin-left:11em;">
                                 
                                     <div class="" style="height: 150px;  width: 150px;border-style: groove;border-color: azure;">
                                        <img id="rear" height="150" width="150" alt="rear view" src="/images/product-images/{{product._id}}__rear.png">
                                    </div>
                                    <input type="file" name="rear" value="{{product._id}}__rear.png"alt="" id="inputRear" >
                                     <input type="text" name="base64rear" id="base64ImageRear" hidden>
                                    <input type="button" id="btnCropRear" value="Crop" />
		                         	<input type="button" id="btnRestoreRear" value="Restore" />
		                        <div>
			<canvas id="canvasRear" style="width:100px;height:200px;">
			  Your browser does not support the HTML5 canvas element.
			</canvas>
		  </div>         
                                </div>
                            </div>

                        </fieldset>
