<div class="container ">
  <div class="row">
  {{#each address}}
  <div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">Address</h5>
    <h6 class="card-subtitle mb-2 text-muted"><span id="{{this._id}}place">{{this.place}}</span></h6>
    <p class="card-text">City:<span id="{{this._id}}city">{{this.city}}</span>, State:<span id="{{this._id}}state">{{this.state}}</span>  , Pincode:<span id="{{this._id}}pincode">{{this.pincode}}</span> </p>
    <a href="" onclick="selectAddress(event,'{{this._id}}')" class="card-link">Choose This Address</a>
  </div>
</div>
  {{/each}}
  </div>
</div>
