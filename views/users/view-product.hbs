<script>
	 	function addToCart(e, id) {
			e.preventDefault();
			console.log("hellll")
			console.log(id)

			$.ajax({
				url: '/add-to-cart',
				method: "post",
				data: { productId: id },
				success: (response) => {
					if (!response.user) {
						window.location.href = '/login'
					}

					else {
						var num = document.getElementById('cartCount').innerHTML
						document.getElementById('cartCount').innerHTML = parseInt(num) + 1
						document.getElementById('cart-Button' + id).innerHTML = ""
						document.getElementById('cart-Button' + id).style.visibility = 'hidden'
						document.getElementById('cart-added-to-cart' + id).innerHTML = 'Product Added to Cart'
						console.log("added")

					}

				}

			})

			return false; // for good measure


		}
</script>